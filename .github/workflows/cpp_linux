name: C/C++ CI

on: 
  push:
    branches: [ master ]
    paths:
      - "cpp/**"
  pull_request:
    branches: [ master ]
    paths:
      - "cpp/**"
  workflow_dispatch:

jobs:
  ubuntu-mingw:
    runs-on: ubuntu-latest
    steps:
    - name: checkout  
      uses: actions/checkout@v2
    - name: configure
      env: 
        cc: gcc
        cxx: g++
      run: mkdir cpp/build && cd cpp/build && cmake ..
    - name: build with gcc
      run: cd cpp/build && make
